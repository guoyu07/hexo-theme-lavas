$article-padding = 24px

.archives-wrap
    margin: block-margin 0

.archives
    clearfix()

.archive-year-wrap
    margin: 0 article-padding 20px article-padding
    font-size: 18px
    color: #8e90da
    font-weight: bold
    border-left: solid 4px
    padding-left: 13px
    background: #f2f5f6
    line-height: 34px


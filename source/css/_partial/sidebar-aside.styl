#sidebar
    @media mq-normal
        column(sidebar-column)

.widget-wrap
    margin: block-margin article-padding

.widget-title
    @extend $block-caption
    &:before
        font-family: font-icon
        margin-right: 6px
    &.widget-title-archive
        &:before
            content: "\f114"
    &.widget-title-category
        &:before
            content: "\f022"
    &.widget-title-tag "\f016"
        &:before
            content: "\f114"
    &.widget-title-recent
        &:before
            content: "\f016"


.widget
    color: color-sidebar-text
    background: #f2f5f6
    text-shadow: 0 1px #fff
    padding: 15px
    border-radius: 3px
    a
        color: color-grey
        text-decoration: none
        padding: 8px 0
        display: inline-block;
        line-height: 16px
        transition: color ease .3s
        &:hover
            color: #000
    ul, ol, dl
        ul, ol, dl
            margin-left: 15px
            list-style: disc

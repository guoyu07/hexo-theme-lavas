@import "nib"
@import "_variables"
@import "_util/mixin"
@import "_util/grid"

global-reset()

input, button
    margin: 0
    padding: 0
    &::-moz-focus-inner
        border: 0
        padding: 0

@font-face
    font-family: FontAwesome
    font-style: normal
    font-weight: normal
    src: url(font-icon-path + ".eot?v=#" + font-icon-version)
    src: url(font-icon-path + ".eot?#iefix&v=#" + font-icon-version) format("embedded-opentype"),
         url(font-icon-path + ".woff?v=#" + font-icon-version) format("woff"),
         url(font-icon-path + ".ttf?v=#" + font-icon-version) format("truetype"),
         url(font-icon-path + ".svg#fontawesomeregular?v=#" + font-icon-version) format("svg")

html, body, #container
    height: 100%
    -webkit-tap-highlight-color: rgba(0, 0, 0, 0)

body
    background: color-background
    font: font-size font-sans
    -webkit-text-size-adjust: 100%
a
    color: #2874f0

.outer
    clearfix()
    max-width: (column-width + gutter-width) * columns + gutter-width
    margin: 0 auto

.inner
    column(columns)
    width: 100%
    margin: 0

.left, .alignleft
    float: left

.right, .alignright
    float: right

.clear
    clear: both

#container
    position: relative

#mobile-nav
    display: none
.mobile-nav-on
    overflow: hidden
.wrap
    height: 100%
    position: relative
    top: header-height
.mask
    position: fixed
    top: 0
    left: 0
    right: 0
    bottom: 0
    background: rgba(0, 0, 0, .5)
    display: none
    z-index: 10000
    .mobile-nav-on &
        display: block
.content-wrapper
    position: relative
    min-height: 100%
    padding-bottom: 100px
.skeleton
    display: none
.page-component
    position: relative
    background: color-background
.theme-img-wrapper
    position: relative
    background: theme-color
    overflow: hidden
    .theme-img
        position: relative
        left: 50%
        transform: translate(-50%)
        display: block
    .theme-img-mobile
        display: none
.main-info
    position: absolute
    left: 0
    text-align: center
    width: 100%
    top: 50%
    transform: translateY(-50%)
    color: #fff
    text-shadow: 0 0 6px #999
    h1
        font-size: 50px
        font-weight: bold
    p
        font-size: 22px
        margin: 10px 40px 0

if !hexo-config("banner")
    .theme-img-wrapper
        min-height: 300px
if sidebar and sidebar isnt bottom
    #main
        @media mq-normal
            column(main-column)

if sidebar is left
    @media mq-normal
        #main
            float: right

@import "_extend"
@import "_partial/header"
@import "_partial/article"
@import "_partial/comment"
@import "_partial/archive"
@import "_partial/footer"
@import "_partial/highlight"
@import "_partial/mobile"

if sidebar
    @import "_partial/sidebar"


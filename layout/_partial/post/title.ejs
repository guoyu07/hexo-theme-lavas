<% if (post.link) { %>
    <a class="<%= class_name %>" href="<%- url_for(post.link) %>" target="_blank" itemprop="url">
        <h1 itemprop="name"><%= post.title %></h1>
    </a>
<% } else if (post.title) { %>
    <% if (index) { %>
        <a class="<%= class_name %>" href="<%- url_for(post.path) %>">
            <h1 itemprop="name"><%= post.title %></h1>
        </a>
    <% } else { %>
        <h1 class="<%= class_name %>" itemprop="name">
            <%= post.title %>
        </h1>
    <% } %>
<% } %>
